<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/navbar.css" rel="stylesheet">
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />

    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="~/Scripts/JSONUploader.js"></script>

    <script type="text/javascript" src="~/Scripts/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</head>

<body>
    <div class="container">
        <img src="~/Content/Images/logo.png" />
    </div>
    <br />
    <div class="container">
        <div class="navbar navbar-default" role="navigation">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">Home</a></li>
                    <li><a href="/Projeto">Projetos <span class="badge">@Session["NumProjetos"]</span></a></li>
                    <li><a href="#">Mensagens <span class="badge">42</span></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Session["UsuarioLogado"] &nbsp; <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                @using (Html.BeginForm("LogOff", "Login", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Sair</a>
                                }
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="jumbotron">
            @RenderBody()
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        <script type="text/javascript">
            $.fn.datepicker.defaults.format = "dd/mm/yyyy";

            $('.datepicker').datepicker({
                autoclose: true,
                format: "dd/mm/yyyy"

            });
        </script>
    }
</body>
</html>
