	<welcome-file-list>
		<welcome-file>/index.xhtml</welcome-file>
	</welcome-file-list>
	
	<mime-mapping>   
	   <extension>png</extension>   
	   <mime-type>images/png</mime-type>   
  	</mime-mapping>

	<mime-mapping>   
	   <extension>index</extension>   
	   <mime-type>application/index</mime-type>   
  	</mime-mapping>

